<UserControl x:Class="FileUpdater.View.DestinationField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300" Height="25">
    <Grid Height="25">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="29"/>
        </Grid.ColumnDefinitions>
        <CheckBox Name="SelectCheckBox" Content="CheckBox" HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center"/>
        <ComboBox Name="KeysComboBox"  VerticalAlignment="Top" Width="50" IsEditable="True" Margin="20,2,0,2" HorizontalAlignment="Left" SelectionChanged="KeysComboBox_SelectionChanged"/>
        <TextBox Text="Path" Margin="72,2,0,2" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Padding="0" x:Name="PathField"/>
        <Button Content=". . ." Width="25" Margin="2,2,2,2" HorizontalAlignment="Right" Grid.Column="1" Name="PickFileButton"/>
    </Grid>
</UserControl>
