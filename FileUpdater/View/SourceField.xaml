<UserControl x:Class="FileUpdater.View.SourceField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="300" Height="25">
    <Grid Height="25" Name="RootGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="29"/>
        </Grid.ColumnDefinitions>
        <CheckBox Name="SelectCheckBox" VerticalAlignment="Center" Margin="2,0,0,0" HorizontalAlignment="Left"/>
        <TextBox Width="30" Text="Key" TextWrapping="Wrap" Margin="20,2,0,2" x:Name="KeyField" HorizontalAlignment="Left"/>
        <TextBox TextWrapping="Wrap" Text="Path" Margin="53,2,0,2" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch" Padding="0" x:Name="PathField"/>
        <Button Content=". . ." Width="25" Margin="2,2,2,2" HorizontalAlignment="Right" Grid.Column="1" Name="PickFileButton"/>
    </Grid>
</UserControl>
